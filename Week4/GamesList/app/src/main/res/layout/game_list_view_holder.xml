<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/gameImage"
        android:layout_width="@dimen/gameImageWidth"
        android:layout_height="@dimen/gameImageHeight"
        android:layout_margin="@dimen/layoutMarginSize"
        android:contentDescription="@string/gameImageDescription"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/gameString"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layoutMarginSize"
        android:layout_weight="1" />
</LinearLayout>